{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": ".",
    "baseUrl": "./"
  },
  "exclude": ["**/__tests__/*", "**/__mocks__/*"]
}
